# ===== Server Settings =====
PORT=3000
JWT_SECRET=your_jwt_secret

# ===== Database Settings =====
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=diary_app

# ===== Upload Settings =====
UPLOAD_DIR=uploads

# ===== Frontend URL =====
CLIENT_URL=http://localhost:5173

# ===== Notification Settings =====
NOTIFICATION_CHANNEL=websocket

# ===== Mail / SMTP (optional) =====
# If you provide SMTP settings, the server will send real verification emails.
# MAIL_HOST and MAIL_PORT are required to enable SMTP sending.
# MAIL_USER and MAIL_PASSWORD are optional depending on your SMTP provider.
MAIL_HOST=
MAIL_PORT=587
MAIL_USER=
MAIL_PASSWORD=
# Sender address used in From: header
MAIL_FROM=no-reply@example.com
